<style>
  section {
    margin-block-end: 4rem;
  }

  h1 {
    margin: 0;
    justify-self: center;
    font-size: 3rem;
    font-family: "Oswald", sans-serif;
  }

  dl {
    display: grid;
    padding-block: 2rem;
    margin: 0;
  }

  dt {
    font-size: 1.25rem;
    font-family: "Oswald", sans-serif;
  }

  dd {
    margin: 0;
  }

  .cover {
    grid-column: 1/-1;
    display: grid;
    grid-template: "stack" 1fr / 1fr;
  }

  .cover::before {
    grid-area: stack;
    content: "";
    width: 100%;
    z-index: 1;
    background: hsla(0deg 0% 0% / 0.125);
  }

  .cover::after {
    grid-area: stack;
    content: "";
    width: 100%;
    z-index: 1;
    background: linear-gradient(
      180deg,
      hsla(0deg 0% 0% / 0) 0%,
      hsla(0deg 0% 0% / 0) 5%,
      hsla(0deg 0% 0% / 0.08) 65%,
      hsla(0deg 0% 0% / 0.5) 90%,
      hsla(0deg 0% 0% / 0.7) 100%
    );
  }

  .cover img {
    grid-area: stack;
    width: 100%;
    aspect-ratio: 4/3;
    object-fit: cover;
    object-position: top center;
    max-height: 75vh;
  }

  .cover-text {
    grid-area: stack;
    place-self: center;
    display: grid;
    place-items: center;
    color: white;
    z-index: 2;
  }

  .cover-name {
    font-size: 3.25rem;
    font-weight: 700;
    text-transform: uppercase;
  }

  .cover-slogan {
    font-size: 1.75rem;
  }

  .summary {
    display: grid;
    grid-template:
      "headshot text" auto
      / 1.5fr 2fr;
    gap: 0 4rem;
  }

  .summary-text {
